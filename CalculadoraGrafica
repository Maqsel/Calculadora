    private void botonunoActionPerformed(java.awt.event.ActionEvent evt) {                                         
    this.txtResultado.setText(this.txtResultado.getText()+"1");
    }                                        

    private void multiplicacionActionPerformed(java.awt.event.ActionEvent evt) {                                               
    this.num1=Float.parseFloat(this.txtResultado.getText());
        this.op="*";
        this.txtResultado.setText(" ");

    }                                              

    private void divisionActionPerformed(java.awt.event.ActionEvent evt) {                                         
      this.num1=Float.parseFloat(this.txtResultado.getText());
        this.op="/";
        this.txtResultado.setText(" ");

    }                                        

