    private void AC1ActionPerformed(java.awt.event.ActionEvent evt) {                                    
        String texto =txtResultado.getText().substring(0,txtResultado.getText().length()-1);
        txtResultado.setText(texto);

    }                                   

    private void CActionPerformed(java.awt.event.ActionEvent evt) {                                  
        this.txtResultado.setText(" ");
    }                                 

    private void sumaActionPerformed(java.awt.event.ActionEvent evt) {                                     
       this.num1=Float.parseFloat(this.txtResultado.getText());
        this.op="+";
        this.txtResultado.setText(" ");

    }                                    

    private void restaActionPerformed(java.awt.event.ActionEvent evt) {                                      
       this.num1=Float.parseFloat(this.txtResultado.getText());
        this.op="-";
        this.txtResultado.setText(" ");

    }                                     

    private void puntoActionPerformed(java.awt.event.ActionEvent evt) {                                      
        if(!(this.txtResultado.getText().contains("."))){
            this.txtResultado.setText(this.txtResultado.getText()+".");
        }

    }                                     

    private void igualActionPerformed(java.awt.event.ActionEvent evt) {                                      
        this.num2=Float.parseFloat(this.txtResultado.getText());
        
        switch(this.op){
            case "+":this.txtResultado.setText(zero(this.num1+this.num2));break;
            case "-":this.txtResultado.setText(zero(this.num1-this.num2));break;
            case "*":this.txtResultado.setText(zero(this.num1*this.num2));break;
            
            case "/":if(this.num2==0){ this.txtResultado.setText("indeterminado");}
          
            else{
                this.txtResultado.setText(zero(this.num1/this.num2));}break;
        }

    }                                     

      public String zero (float txtResultado){   //para que salga entero la division y no decimal
         String retorno="";
         retorno=Float.toString(txtResultado);
         if(txtResultado%1==0){
             retorno=retorno.substring(0,retorno.length()-2);
         }
         
         return retorno;
    }
